@model Category
@{
    ViewData["Title"] = "Create Category";
}
<div class="container mt-5">
    <div class="col-12 col-md-6">
        <div class="card mb-4">
            <div class="card-header justify-content-between align-items-center d-flex">
                <h6 class="card-title m-0">Create Category</h6>
            </div>
            <div class="card-body">
                <form  method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Category Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter name here...">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <button type="submit" class=" btn mb-2 btn-success text-light">Submit</button>
                    <a asp-action="All" class="btn mb-2 btn-danger-faded">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

