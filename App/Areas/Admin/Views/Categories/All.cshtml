@model List<Category>
@{
    ViewData["Title"] = "All Categories";
    int num = 1;
}

<section class="container-fluid">
    <div class="row g-4 mt-3">
        <div class="col-12 col-md-6">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between">
                    <h3 class="card-title  text-center">All Categories</h3>
                    <a asp-action="Create" class="btn btn-sm mb-2 btn-success-faded">Add Category</a>
                </div>
                <div class="card-body">
                    <table class="table @*table-hover*@">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Products</th>
                                <th scope="col" class="text-center">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cat in Model)
                            {
                                int productCount = 0;
                                int percent = 0;
                                <tr>
                                    <th scope="row">@num</th>
                                    <td>@cat.Name</td>
                                    <td>
                                        @foreach (var menu in cat.Menu)
                                        {
                                            productCount++;
                                            percent = productCount * 10;
                                        }
                                        <div class="progress mb-2">
                                            <button class="progress-bar bg-success border-0" role="progressbar" style="width: @percent%" aria-valuenow="@productCount" aria-valuemin="0" aria-valuemax="10" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@productCount products"></button>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-sm btn-warning me-3">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-3"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg>
                                            </a>
                                            <a class="btn btn-sm btn-danger">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                num++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

